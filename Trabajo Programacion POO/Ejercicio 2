class Nota:
    def __init__(self, catedra, notaExamen):
        self.catedra = catedra
        self.notaExamen = notaExamen


class Alumno:
    def __init__(self, nombreCompleto, legajo):
        self.nombreCompleto = nombreCompleto
        self.legajo = legajo
        self.notas = []  # lista para guardar las notas

    # Método para agregar una nota
    def agregar_nota(self, nota):
        self.notas.append(nota)

    # Método para calcular el promedio de las notas
    def calcular_promedio(self):
        total = 0
        cantidad = 0
        for n in self.notas:
            total = total + n.notaExamen
            cantidad = cantidad + 1

        if cantidad > 0:
            return total / cantidad
        else:
            return 0


class CargaNotas:
    def main():
        alumnos = []  # lista para guardar todos los alumnos

        while True:
            print("\n=== CARGA DE DATOS DEL ALUMNO ===")

            # Validar nombre no repetido
            while True:
                nombre = input("Ingrese nombre completo del alumno: ")
                existe_nombre = False
                for a in alumnos:
                    if a.nombreCompleto.lower() == nombre.lower():
                        existe_nombre = True
                        break
                if existe_nombre:
                    print(" Ya existe un alumno con ese nombre. Intente con otro.")
                else:
                    break

            # Validar legajo (único y exactamente de 5 cifras)
            while True:
                legajo = input("Ingrese legajo (exactamente 5 cifras): ")

                # Validar que sea numérico y tenga 5 cifras
                if not legajo.isdigit() or len(legajo) != 5:
                    print(" El legajo debe tener exactamente 5 cifras numéricas (ejemplo: 12345).")
                    continue

                legajo = int(legajo)

                # Verificar si ya existe ese legajo
                existe_legajo = False
                for a in alumnos:
                    if a.legajo == legajo:
                        existe_legajo = True
                        break

                if existe_legajo:
                    print(" Ya existe un alumno con ese legajo. Intente con otro.")
                else:
                    break

            alumno = Alumno(nombre, legajo)

            # Cargar notas del alumno
            while True:
                print("\n--- CARGA DE NOTAS ---")
                catedra = input("Ingrese nombre de la cátedra: ")

                # Validar nota entre 0 y 10
                while True:
                    notaExamen = float(input("Ingrese nota del examen (0 a 10): "))
                    if notaExamen < 0 or notaExamen > 10:
                        print(" La nota debe estar entre 0 y 10.")
                    else:
                        break

                nota = Nota(catedra, notaExamen)
                alumno.agregar_nota(nota)

                salirNotas = input("¿Desea dejar de cargar notas para este alumno? (s/n): ").lower()
                if salirNotas == "s":
                    break

            # Validar que tenga al menos una nota
            if len(alumno.notas) == 0:
                print("Debe ingresar al menos una nota. El alumno no será guardado.")
            else:
                alumnos.append(alumno)

            salirAlumno = input("¿Desea dejar de cargar alumnos? (s/n): ").lower()
            if salirAlumno == "s":
                break

        # Mostrar toda la información cargada
        print("\n===== INFORME FINAL =====")
        for a in alumnos:
            print("\nAlumno:", a.nombreCompleto)
            print("Legajo:", a.legajo)
            print("Notas:")
            for n in a.notas:
                print(" -", n.catedra, ":", n.notaExamen)
            print("Promedio:", round(a.calcular_promedio(), 2))  # promedio con 2 decimales


# Ejecutar el programa principal
if __name__ == "__main__":
    CargaNotas.main()




